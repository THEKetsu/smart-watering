# Dockerfile simplifié pour éviter les problèmes de credentials
FROM node:18-alpine

WORKDIR /app

# Copier les fichiers package
COPY package*.json ./
COPY tsconfig.json ./

# Installer les dépendances
RUN npm install

# Copier le code source
COPY public/ ./public/
COPY src/ ./src/

# Variables d'environnement
ENV REACT_APP_MOCK_MODE=true
ENV NODE_ENV=development
ENV REACT_APP_API_URL=

# Exposer le port
EXPOSE 3000

# Démarrage
CMD ["npm", "start"]